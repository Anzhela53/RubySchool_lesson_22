<h1>Sign up for Barber Shop</h1>
<p>On this page you can make an appointment with us</p>

<form action ="/visit" method ="POST" role="form">
  <div class="form-group">
    <label for="exampleInputEmail1">Your name</label>
    <input name="username" type="text" class="form-control" placeholder="You`re name" value="<%=@username%>">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Phone</label>
    <input name="phone" type="text" class="form-control " placeholder="You`re phone" value="<%=@phone%>">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1"> When will you arrive?</label>
    <input name="datetime" type="text" class="form-control" placeholder="Date and time" value="<%=@datetime%>">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Your hairdresser</label>
    <select name ="barber" class="form-control ">
      <option <%= '@barber == 'Jesse' ? 'selected': '' %>Jesse</option>
      <option <%= '@barber == 'Gas' ? 'selected': '' %>>Gas</option>
      <option <%= '@barber == 'Lesse' ? 'selected': '' %>>Lesse</option>
      <option <%= '@barber == 'Mikolay' ? 'selected': '' %>>Mikolay</option>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Choose paint color:</label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>


</form>

<script type="text/javascript">
    $(function () {
      $('#color').simplecolorpicker();
  });

</script>